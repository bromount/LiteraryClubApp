<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="#FFFFFF"
                android:src="@drawable/minimalist_crop_rerender"
                android:scaleType="centerCrop" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="400dp"
                android:layout_height="275dp"
                android:scaleX="0.7"
                android:scaleY="0.7"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:srcCompat="@drawable/re_res_alpha_shadow" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.16"
                app:cardBackgroundColor="#FFFFFFFF"
                android:layout_marginHorizontal="16dp"
                android:outlineSpotShadowColor="#000000"
                app:cardCornerRadius="10dp"
                android:outlineAmbientShadowColor="#000000"
                app:cardElevation="25px">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#00FFFFFF"
                    android:paddingVertical="28dp"
                    android:paddingHorizontal="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.3"
                        android:text="VEC LITERARY CLUB APP"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#7739FF"
                        android:textSize="32dp"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.3"
                        android:text="Hello user,\n Welcome to the VEC literary club app. Please scroll down to enter your credentials and sign in.\n\nIf you've yet to create an account, do scroll further and fill up the form to do the same.\n\n We hope that you find this app useful and to your liking."
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#503075"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        android:layout_marginVertical="16dp"
                        android:paddingHorizontal="32dp" />

                    <View
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="64px"
                        android:layout_height="3px"
                        android:background="#999999" />


                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.455"
                app:cardBackgroundColor="#FFFFFFFF"
                android:layout_marginHorizontal="16dp"
                android:outlineSpotShadowColor="#000000"
                app:cardCornerRadius="10dp"
                android:outlineAmbientShadowColor="#000000"
                app:cardElevation="25px">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#00FFFFFF"
                    android:paddingVertical="24dp"
                    android:paddingHorizontal="8dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SIGN IN"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#7739FF"
                        android:textSize="32dp"
                        android:textAlignment="center"
                        android:layout_marginVertical="16dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email ID :"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#503075"
                        android:textSize="22dp"
                        android:textAlignment="textStart"
                        android:layout_marginVertical="16dp"
                        android:paddingHorizontal="32dp" />

                    <EditText
                        android:id="@+id/Sign_In_Email"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:hint="Example@Exmail.com"
                        android:textSize="20dp"
                        android:layout_marginVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:layout_marginHorizontal="32dp"
                        android:textColor="#393939"
                        android:textColorHint="#757575"
                        android:inputType="textEmailAddress" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password :"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#503075"
                        android:textSize="22dp"
                        android:textAlignment="textStart"
                        android:layout_marginVertical="16dp"
                        android:paddingHorizontal="32dp" />

                    <EditText
                        android:id="@+id/Sign_In_Password"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:hint="Password"
                        android:textSize="20dp"
                        android:layout_marginVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:layout_marginHorizontal="32dp"
                        android:textColor="#393939"
                        android:textColorHint="#757575"
                        android:inputType="textPassword" />

                    <Button
                        android:id="@+id/sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign In"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:textColor="#FFFFFF"
                        android:background="#400050"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="64dp"
                        android:layout_marginVertical="16dp" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.99"
                app:cardBackgroundColor="#FFFFFFFF"
                android:layout_marginHorizontal="16dp"
                android:outlineSpotShadowColor="#000000"
                app:cardCornerRadius="10dp"
                android:outlineAmbientShadowColor="#000000"
                app:cardElevation="25px">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#00FFFFFF"
                    android:paddingVertical="28dp"
                    android:paddingHorizontal="8dp">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="SIGN UP"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#7739FF"
                        android:textSize="32dp"
                        android:textAlignment="center"
                        android:layout_marginVertical="16dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="First Name :"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#503075"
                        android:textSize="22dp"
                        android:textAlignment="textStart"
                        android:layout_marginVertical="16dp"
                        android:paddingHorizontal="32dp" />

                    <EditText
                        android:id="@+id/Sign_Up_Fname"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:hint="First Name"
                        android:textSize="20dp"
                        android:layout_marginVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:layout_marginHorizontal="32dp"
                        android:textColor="#393939"
                        android:textColorHint="#757575"
                        android:inputType="text" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Last Name :"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#503075"
                        android:textSize="22dp"
                        android:textAlignment="textStart"
                        android:layout_marginVertical="16dp"
                        android:paddingHorizontal="32dp" />

                    <EditText
                        android:id="@+id/Sign_Up_Lname"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:hint="Last Name"
                        android:textSize="20dp"
                        android:layout_marginVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:layout_marginHorizontal="32dp"
                        android:textColor="#393939"
                        android:textColorHint="#757575"
                        android:inputType="text" />


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_marginTop="5dp"
                        android:background="#FFFFFF"
                        android:outlineSpotShadowColor="#FFFFFF"
                        android:outlineAmbientShadowColor="#FFFFFF"
                        app:cardElevation="0dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal"
                            android:background="#FFFFFF">

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="52dp"
                                android:text="Gender"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="#503075"
                                android:textSize="22dp"
                                android:textAlignment="center"
                                android:layout_marginVertical="16dp"
                                android:paddingHorizontal="5dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintVertical_bias="0" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="52dp"
                                android:text="Course"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="#503075"
                                android:textSize="22dp"
                                android:textAlignment="center"
                                android:layout_marginVertical="16dp"
                                android:paddingHorizontal="5dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.66"
                                app:layout_constraintVertical_bias="0" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="52dp"
                                android:text="Year"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="#503075"
                                android:textSize="22dp"
                                android:textAlignment="center"
                                android:layout_marginVertical="16dp"
                                android:paddingHorizontal="5dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.33"
                                app:layout_constraintVertical_bias="0" />

                            <TextView
                                android:layout_width="80dp"
                                android:layout_height="52dp"
                                android:text="Section"
                                android:fontFamily="sans-serif-condensed"
                                android:textColor="#503075"
                                android:textSize="22dp"
                                android:textAlignment="center"
                                android:layout_marginVertical="16dp"
                                android:paddingHorizontal="5dp"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintVertical_bias="0" />

                            <Spinner
                                android:layout_width="80dp"
                                android:layout_height="32dp"
                                android:background="#EEEEEE"
                                android:foregroundTintMode="multiply"
                                android:foregroundTint="#000000"
                                style="@style/Theme.AppCompat.Light.NoActionBar"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0"
                                app:layout_constraintVertical_bias="0.9"
                                android:id="@+id/gender_spinner">


                            </Spinner>

                            <Spinner
                                android:layout_width="80dp"
                                android:layout_height="32dp"
                                android:background="#EEEEEE"
                                android:foregroundTintMode="multiply"
                                android:foregroundTint="#000000"
                                style="@style/Theme.AppCompat.Light.NoActionBar"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.33"
                                app:layout_constraintVertical_bias="0.9"
                                android:id="@+id/year_spinner"

                                >


                            </Spinner>


                            <Spinner
                                android:layout_width="80dp"
                                android:layout_height="32dp"
                                android:background="#EEEEEE"
                                android:foregroundTintMode="screen"
                                android:foregroundTint="#000000"
                                style="@style/Theme.AppCompat.Light.NoActionBar"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="0.66"
                                app:layout_constraintVertical_bias="0.9"
                                android:id="@+id/course_spinner"></Spinner>

                            <Spinner
                                android:layout_width="80dp"
                                android:layout_height="32dp"
                                android:background="#EEEEEE"
                                android:foregroundTintMode="multiply"
                                android:foregroundTint="#000000"
                                style="@style/Theme.AppCompat.Light.NoActionBar"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintHorizontal_bias="1"
                                app:layout_constraintVertical_bias="0.9"
                                android:id="@+id/section_spinner">


                            </Spinner>


                        </androidx.constraintlayout.widget.ConstraintLayout>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email ID :"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#503075"
                        android:textSize="22dp"
                        android:textAlignment="textStart"
                        android:layout_marginVertical="16dp"
                        android:paddingHorizontal="32dp" />

                    <EditText
                        android:id="@+id/Sign_Up_Email"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:hint="Example@Exmail.com"
                        android:textSize="20dp"
                        android:layout_marginVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:layout_marginHorizontal="32dp"
                        android:textColor="#393939"
                        android:textColorHint="#757575"
                        android:inputType="textEmailAddress" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password :"
                        android:fontFamily="sans-serif-condensed"
                        android:textColor="#503075"
                        android:textSize="22dp"
                        android:textAlignment="textStart"
                        android:layout_marginVertical="16dp"
                        android:paddingHorizontal="32dp" />

                    <EditText
                        android:id="@+id/Sign_Up_Password"
                        android:layout_width="match_parent"
                        android:layout_height="54dp"
                        android:hint="Password"
                        android:textSize="20dp"
                        android:layout_marginVertical="4dp"
                        android:paddingHorizontal="12dp"
                        android:layout_marginHorizontal="32dp"
                        android:textColor="#393939"
                        android:textColorHint="#757575"
                        android:inputType="textPassword" />

                    <Button
                        android:id="@+id/sign_up_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sign Up"
                        android:textAlignment="center"
                        android:textSize="24dp"
                        android:textColor="#FFFFFF"
                        android:background="#400050"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:layout_marginHorizontal="64dp"
                        android:layout_marginVertical="16dp" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.cardview.widget.CardView
        android:id="@+id/sign_loading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.7"
        android:visibility="invisible"
        app:cardBackgroundColor="#AA000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ProgressBar
            style="@android:style/Widget.ProgressBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:indeterminateTint="#CC00FF"
            android:indeterminateTintMode="multiply"
            android:max="0"
            android:progress="0"
            android:progressTint="#400050"
            android:scaleX="0.25"
            android:scaleY="0.25" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>