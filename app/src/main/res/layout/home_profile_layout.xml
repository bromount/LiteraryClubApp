<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="320dp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.045"
            android:text="USER PROFILE"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#001261"
            android:textSize="24dp"
            android:textAlignment="gravity"
            android:gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.2"
            android:background="#757575"
            android:layout_marginHorizontal="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FIRST NAME :"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="18sp"
            android:textColor="#454545"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32sp" />

        <TextView
            android:id="@+id/student_information_Fname"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Hatsune"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.25"
            app:layout_constraintHorizontal_bias="1"
            android:textSize="18sp"
            android:textColor="#454545"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32sp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LAST NAME :"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="18sp"
            android:textColor="#454545"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32sp" />

        <TextView
            android:id="@+id/student_information_Lname"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="Miku"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.4"
            app:layout_constraintHorizontal_bias="1"
            android:textSize="18sp"
            android:textColor="#454545"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32sp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LCA ID :"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.55"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="18sp"
            android:textColor="#454545"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32sp" />

        <TextView
            android:id="@+id/student_information_LCAID"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="393 - 939"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.55"
            app:layout_constraintHorizontal_bias="1"
            android:textSize="18sp"
            android:textColor="#454545"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32sp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTRATIONS :"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="18sp"
            android:textColor="#454545"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32sp" />

        <TextView
            android:id="@+id/student_information_Registrations"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="39"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.7"
            app:layout_constraintHorizontal_bias="1"
            android:textSize="18sp"
            android:textColor="#454545"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32sp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMISSIONS :"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintHorizontal_bias="0"
            android:textSize="18sp"
            android:textColor="#454545"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32sp" />

        <TextView
            android:id="@+id/student_information_Submissions"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:text="39"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintVertical_bias="0.85"
            app:layout_constraintHorizontal_bias="1"
            android:textSize="18sp"
            android:textColor="#454545"
            android:gravity="right"
            android:textAlignment="gravity"
            android:layout_marginVertical="16dp"
            android:layout_marginHorizontal="32sp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.9"
            android:background="#757575"
            android:layout_marginHorizontal="32dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>