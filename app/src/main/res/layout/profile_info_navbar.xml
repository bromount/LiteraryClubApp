<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#80808080
"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="360dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintVertical_bias="0"
        android:background="#00FFFFFF">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFFFFF" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="285dp"
                android:src="@drawable/minimalist_banner"
                android:scaleType="centerCrop"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0" />

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/re_res_alpha_shadow_mini"
                android:scaleType="fitCenter"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.25"
                app:layout_constraintHorizontal_bias="0.5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VEC LITERARY CLUB APP"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-condensed-medium"
                android:paddingVertical="10dp"
                android:paddingHorizontal="32dp"
                android:textSize="18dp"
                android:textColor="#555555"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.1"
                app:layout_constraintHorizontal_bias="0.5" />

            <androidx.cardview.widget.CardView
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.62"
                app:layout_constraintHorizontal_bias="0.5"
                app:cardCornerRadius="20dp"
                android:elevation="25dp">

                <ImageView
                    android:id="@+id/nav_view_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/student_icon" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/nav_view_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hatsune Miku"
                android:textAlignment="center"
                android:fontFamily="sans-serif-condensed-medium"
                android:paddingVertical="10dp"
                android:paddingHorizontal="32dp"
                android:textSize="24dp"
                android:textColor="#555555"
                android:layout_marginHorizontal="32dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="0.92"
                app:layout_constraintHorizontal_bias="0.5" />

            <TextView
                android:id="@+id/nav_view_LCA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="393-939"
                android:textAlignment="textEnd"
                android:fontFamily="sans-serif-condensed-light"
                android:paddingVertical="10dp"
                android:paddingHorizontal="32dp"
                android:textSize="18dp"
                android:textColor="#555555"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintVertical_bias="1"
                app:layout_constraintHorizontal_bias="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>