<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Student_recycler_card"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="2dp"
    android:paddingHorizontal="8dp"
    android:paddingVertical="12dp"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:cardBackgroundColor="#000000"
            android:layout_height="50dp"
            android:layout_width="50dp"
            app:cardCornerRadius="10dp"
            app:layout_constraintHorizontal_bias="0.05"
            app:cardElevation="5dp">

            <ImageView
                android:id="@+id/recycler_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/imga" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/recycler_name"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Hatsune Miku"
            android:textSize="22dp"
            android:ellipsize="marquee"
            android:fadingEdge="horizontal"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:textAlignment="textEnd"
            android:textColor="#101010"
            android:fontFamily="sans-serif-condensed-light"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.2" />

        <TextView
            android:id="@+id/recycler_LCA"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="393-939"
            android:textSize="16dp"
            android:textColor="#393939"
            android:fontFamily="sans-serif-condensed-light"
            android:textAlignment="textEnd"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.9" />

        <TextView
            android:id="@+id/recycler_YCS"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="1 / CSE / A"
            android:textSize="16dp"
            android:textColor="#393939"
            android:fontFamily="sans-serif-condensed-light"

            android:textAlignment="textStart"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.9" />

        <View
            android:id="@+id/divider7"
            android:layout_width="230dp"
            android:layout_height="2dp"
            android:background="#AAAAAA"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintVertical_bias="0.57"

            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>