<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_height="440sp"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="10sp"
    android:layout_marginHorizontal="16sp"
    android:layout_marginVertical="8sp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/Home_Event_Title"
            android:layout_width="match_parent"
            android:layout_height="48sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.02"
            android:text="UPCOMING EVENT"
            android:fontFamily="sans-serif-condensed"
            android:textColor="#001261"
            android:textSize="24sp"
            android:textAlignment="gravity"
            android:gravity="center" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.15"
            android:background="#757575"
            android:layout_marginHorizontal="32sp" />

        <androidx.cardview.widget.CardView
            android:layout_height="280sp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="10sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.55"
            app:cardCornerRadius="10sp"
            app:cardElevation="5sp"
            app:cardBackgroundColor="#FFFFFF">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent">

                <TextView
                    android:text="EVENT TITLE"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textColor="#001261"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:layout_height="36sp"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_bias="0.0"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:layout_marginHorizontal="8sp" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="50sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_bias="0.15"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="0sp"
                    app:cardCornerRadius="0sp"
                    android:layout_marginHorizontal="16sp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/Home_Event_Name"
                            android:text="NAME OF EVENT"
                            android:textColor="#001261"
                            android:textSize="18sp"
                            android:gravity="center"
                            android:textAlignment="gravity"
                            android:layout_height="40sp"
                            android:layout_width="match_parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintVertical_bias="0.1"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:ellipsize="marquee"
                            android:singleLine="true"
                            android:layout_marginHorizontal="8sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1sp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintVertical_bias="0.85"
                            android:background="#757575"
                            android:layout_marginHorizontal="64sp" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="EVENT DESCRIPTION"
                    android:textColor="#001261"
                    android:fontFamily="sans-serif-condensed-light"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:textAlignment="gravity"
                    android:layout_height="36sp"
                    android:layout_width="match_parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_bias="0.4"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:ellipsize="marquee"
                    android:layout_marginHorizontal="8sp" />


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="140sp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintVertical_bias="0.95"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="0sp"
                    app:cardCornerRadius="0sp"
                    android:layout_marginHorizontal="8sp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.core.widget.NestedScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintVertical_bias="0"
                            android:scrollbarAlwaysDrawVerticalTrack="true"
                            android:fadeScrollbars="false"
                            android:scrollbars="vertical"
                            android:verticalScrollbarPosition="right"
                            android:scrollbarStyle="insideOverlay"
                            android:scrollbarThumbVertical="@drawable/scroll"
                            android:paddingHorizontal="2sp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/Home_Event_Desc"
                                    android:text="DESCRIPTION OF EVENT"
                                    android:textColor="#393939"
                                    android:textSize="16sp"
                                    android:gravity="center"
                                    android:textAlignment="gravity"
                                    android:layout_height="wrap_content"
                                    android:layout_width="match_parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    app:layout_constraintRight_toRightOf="parent"
                                    app:layout_constraintLeft_toLeftOf="parent"
                                    app:layout_constraintVertical_bias="0.7"
                                    android:layout_marginHorizontal="8sp"
                                    android:paddingVertical="10sp" />
                            </LinearLayout>
                        </androidx.core.widget.NestedScrollView>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/Home_Event_Button"
            android:layout_width="wrap_content"
            android:layout_height="36sp"
            android:textSize="16sp"
            android:text="GO TO EVENT"
            android:background="#39AA39"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintVertical_bias="0.95"
            android:paddingHorizontal="48sp" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>